<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Bean 'a dair yapılandırma bilgileri -->

	<bean id="selam" class="com.hacidoganilbars.deneme.Selam">

		<property name="mesaj1" value="Beklenen" />
		<property name="mesaj2" value="Ne Taze Ölüyü Mezar" />

	</bean>
	<bean id="yazar" class="com.hacidoganilbars.deneme.Yazar" parent="selam">
		<property name="mesaj1" value="Ne Hasta Bekler Sabahı" />
		<property name="mesaj3" value="Ne De Şeytan Bir Günahı.. Seni Beklediğim Kadar..." />

	</bean>

</beans>